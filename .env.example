# Ontologic API Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ======================
# Core Configuration
# ======================
APP_ENV=dev
APP_LOG_LEVEL=INFO

# ======================
# Database
# ======================
APP_DATABASE_URL=sqlite:///./ontologic.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/ontologic

# ======================
# JWT Authentication
# ======================
APP_JWT_SECRET=your-secret-key-change-in-production
APP_JWT_LIFETIME_SECONDS=3600

# ======================
# Qdrant Vector Database
# ======================
APP_QDRANT_URL=http://127.0.0.1:6333
APP_QDRANT_API_KEY=  # Leave empty for local development

# ======================
# Redis Cache
# ======================
APP_REDIS_URL=redis://localhost:6379/0

# ======================
# Payment Processing (Stripe)
# ======================
# Enable payments (true/false)
APP_PAYMENTS_ENABLED=true

# Stripe API Keys (get from https://dashboard.stripe.com/test/apikeys)
# Use test keys (pk_test_... and sk_test_...) for development
APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
APP_STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secret (get from https://dashboard.stripe.com/test/webhooks)
APP_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Payment grace period in days (how long users can use service after payment failure)
APP_PAYMENT_GRACE_PERIOD_DAYS=7

# ======================
# OAuth Providers (Optional)
# ======================
APP_OAUTH_ENABLED=false
APP_GOOGLE_CLIENT_ID=
APP_GOOGLE_CLIENT_SECRET=
APP_DISCORD_CLIENT_ID=
APP_DISCORD_CLIENT_SECRET=
APP_APPLE_CLIENT_ID=
APP_APPLE_CLIENT_SECRET=

# ======================
# Feature Flags
# ======================
APP_CHAT_USE_PDF_CONTEXT=true
APP_DOCUMENT_UPLOADS_ENABLED=true
APP_PDF_CONTEXT_LIMIT=5
APP_MAX_UPLOAD_SIZE_MB=50

# ======================
# Observability
# ======================
APP_TELEMETRY_ENABLED=false
APP_OTLP_ENDPOINT=http://localhost:4317
